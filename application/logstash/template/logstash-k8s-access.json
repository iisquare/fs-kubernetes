{
  "index_patterns": ["logstash-k8s-access-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "message": {
          "type": "text"
        },
        "@version": {
          "type": "long"
        },
        "@timestamp": {
          "type": "date"
        },
        "log_offset": {
          "type": "long"
        },
        "log_filepath": {
          "type": "keyword"
        },
        "log_timestamp": {
          "type": "date"
        },
        "log_hostname": {
          "type": "keyword"
        },
        "remote_addr": {
          "type": "keyword"
        },
        "remote_user": {
          "type": "keyword"
        },
        "time_local": {
          "type": "date"
        },
        "request": {
          "type": "keyword",
          "ignore_above": 65535
        },
        "status": {
          "type": "short"
        },
        "body_bytes_sent": {
          "type": "integer"
        },
        "http_referer": {
          "type": "keyword",
          "ignore_above": 65535
        },
        "http_user_agent": {
          "type": "keyword",
          "ignore_above": 65535
        },
        "request_length": {
          "type": "integer"
        },
        "request_time": {
          "type": "double"
        },
        "proxy_upstream_name": {
          "type": "keyword"
        },
        "proxy_alternative_upstream_name": {
          "type": "keyword"
        },
        "upstream_addr": {
          "type": "keyword"
        },
        "port": {
          "type": "short"
        },
        "upstream_response_length": {
          "type": "integer"
        },
        "upstream_response_time": {
          "type": "double"
        },
        "upstream_status": {
          "type": "short"
        },
        "req_id": {
          "type": "keyword"
        }
      }
    }
  }
}
